[Unit]
Description=Intel Graphics SR-IOV Virtual Function Manager
ConditionPathExists=/opt/vm/scripts/configvfs.sh
After=multi-user.target

[Service]
Type=oneshot
RemainAfterExit=true
ExecStart=/bin/bash /opt/vm/scripts/configvfs.sh -e
ExecStop=/bin/bash /opt/vm/scripts/configvfs.sh -d

[Install]
WantedBy=multi-user.target